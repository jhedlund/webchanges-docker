0 8 * * * date && echo "Checking webchanges jobs for errors" && cd /data/webchanges && /usr/local/bin/webchanges --errors email --urls jobs.yaml --config config.yaml --database snapshots.db 2>&1 | /usr/bin/logger -t webchanges
